<% if user_signed_in? %>
  <li><%= link_to('Logout', destroy_user_session_path, :method => :delete,  :onclick=> "return confirm('Are you sure you want to log out?')" ) %></li>
<% else %>
  <li><%= link_to('Login', new_user_session_path)  %></li>
<% end %>
<li>User: 
  <% if current_user %>
    <%= current_user.email %>
  <% else %>
    (not logged in)
  <% end %>
</li>